@{
    Layout = "_CmsLayout";
}
@model IEnumerable<OrderViewModel>

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/orderList.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Mulish:wght@300;900&display=swap">
    <title>EV Tbilisi</title>
    <link rel="icon" href="/images/logo/BrandLogo.jpg">
</head>
<table>
    <thead>
        <tr>
            <th>ტრანზაქციის ID</th>
            <th>მომხმარებლის სახელი</th>
            <th>შეკვეთის თარიღი</th>
            <th>ჯამი</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (OrderViewModel order in Model)
        {
            <tr>
                <td>@order.TransactionId</td>
                <td>@order.FirstName @order.LastName</td>
                <td>@order.Timestamp.ToShortDateString()</td>
                <td>₾@order.Products.Select(x => x.Price).Sum()</td>
                <td>
                    <a asp-controller="Order" asp-action="GetById" asp-route-id="@order.Id"><button class="view-details">სრულად ნახვა</button></a>
                    <a asp-controller="Order" asp-action="Delete" asp-route-id="@order.Id"><button class="delete-order">წაშლა</button></a>
                </td>
            </tr>
        }
    </tbody>
</table>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>