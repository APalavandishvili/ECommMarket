@{
    Layout = "_CmsLayout";
}
@model OrderViewModel;

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/orderItem.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Mulish:wght@300;900&display=swap">
    <title>EV Tbilisi</title>
    <link rel="icon" href="/images/logo/BrandLogo.jpg">
</head>
<div class="order-page">
    <div class="overview">
        <h2>შეძენა</h2>
        <p>შეკვეთის ნომერი: <strong>@Model.TransactionId</strong></p>
        <p>შეკვეთის თარიღი: <strong>@Model.Timestamp.ToShortDateString()</strong></p>
        <p>მთლიანი ჯამი: <strong>₾@Model.Products.Select(x => x.Price).Sum()</strong></p>
        <p>გადახდის მეთოდი: <strong>საბანკო გადარიცხვა</strong></p>
    </div>
    <hr>
    <div class="order-details">
        <h2>შეკვეთის დეტალები</h2>
        <hr>
        <div class="details-table">
        @foreach (ProductViewModel product in Model.Products)
        {
            <div class="item">
                <div class="label">@product.ProductName</div>
                    <div class="value">₾@product.Price</div>
            </div>
        }
        </div>
        <div class="details-table">
            <div class="row total">
                <div class="label">მთლიანი ჯამი:</div>
                <div class="value">₾@Model.Products.Select(x => x.Price).Sum()</div>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>