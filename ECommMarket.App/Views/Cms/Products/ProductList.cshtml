@{
    Layout = "_CmsLayout";
}

@model IEnumerable<ECommMarket.App.Models.ProductViewModel>

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/productList.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Mulish:wght@300;900&display=swap">
    <title>EV Tbilisi</title>
    <link rel="icon" href="/images/logo/BrandLogo.jpg">
</head>
<div class="products">
    <div class="container">
        <div class="product-items">
            <div class="product">
                <div class="product-content">
                    <div class="product-img">
                        <a href="admin-product-edit.html"><img src="img/sneaker-1.png" alt="product image"></a>
                    </div>
                    <div class="product-btns">
                        <a href="admin-product-edit.html" class="btn-cart">
                            რედაქტირება
                            <span><i class="fas fa-edit"></i></span>
                        </a>
                        <button type="button" class="btn-buy">
                            წაშლა
                            <span><i class="fas fa-trash"></i></span>
                        </button>
                    </div>
                </div>
                <div class="product-info">
                    <a href="#" class="product-name">mens shoes DN 23XX, new product</a>
                    <p class="product-price" id="discount">₾ 150.00</p>
                    <p class="product-price">₾ 133.00</p>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>