@model ECommMarket.App.Models.ProductViewModel
@{
    var categories = ViewBag.Categories as List<CategoryViewModel>;
    var selectListItems = categories.Select(x => new SelectListItem()
            {
                Text = x.Name,
                Value = x.Id.ToString()
            });
    Layout = null;
}

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/editProduct.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Mulish:wght@300;900&display=swap">
    <title>EV Tbilisi</title>
    <link rel="icon" href="/images/logo/BrandLogo.jpg">
</head>
<main>
    @using (Html.BeginForm("Edit", "Products", new { id = @Model.Id }, FormMethod.Post, false, new { enctype = "multipart/form-data", id = "edit-product-form" }))
    {
        <div class="form-group">
            <label for="product-name">პროდუქტის დასახელება:</label>
            @Html.TextBoxFor(model => model.ProductName, new { id = "product-name", value=Model.ProductName })
            @Html.ValidationMessageFor(model => model.ProductName, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            <label for="product-description">აღწერა:</label>
            @Html.TextBoxFor(model => model.Description, new { id = "product-description", value = Model.Description })
            @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            <label for="product-price">ფასი:</label>
            @Html.TextBoxFor(model => model.Price, new { id = "product-price", value = Model.Price })
            @Html.ValidationMessageFor(model => model.Price, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Photos, "აირჩიე სურათები")
            <input type="file" name="UploadedPhotos" multiple="multiple" />
            @Html.ValidationMessageFor(m => m.UploadedPhotos)
        </div>

        <div class="form-group">
            <label for="product-category">კატეგორია:</label>
            @Html.DropDownListFor(model => model.CategoryId, selectListItems, "", new { @class = "form-control" })
        </div>

        <div class="form-group">
            <label>Existing Images:</label>
            <div class="image-gallery">
                @foreach(var photos in Model.Photos)
                {
                    <div class="image-container">
                        <img src=@photos.PhotoUrl alt="Product Image 1" class="product-image">
                        <a href="" class="delete-button">Delete</a>
                    </div>
                }
            </div>
        </div>

        <button type="submit" class="btn btn-primary">დამატება</button>
    }
</main>