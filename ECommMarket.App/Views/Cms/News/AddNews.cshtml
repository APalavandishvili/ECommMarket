@model ECommMarket.App.Models.NewsViewModel
@{
    Layout = null;
}

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="https://cdn.ckeditor.com/ckeditor5/39.0.1/classic/ckeditor.js"></script>
    <link rel="stylesheet" href="/css/addNews.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Mulish:wght@300;900&display=swap">
    <title>EV Tbilisi</title>
    <link rel="icon" href="/images/logo/BrandLogo.jpg">
</head>
<main>
    @using (Html.BeginForm("Add", "News", FormMethod.Post, new { enctype = "multipart/form-data", id = "edit-product-form" }))
    {
        <div class="form-group">
            <label for="product-name">სიახლის სათაური:</label>
            @Html.TextBoxFor(model => model.Title, new { id = "product-name" })
            @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            <label for="product-description">კონტენტი:</label>
            @Html.TextAreaFor(model => model.Article, new { rows = "10", cols = "50", name = "formattedText", id = "editor", value = Model.Article })
            @Html.ValidationMessageFor(model => model.Article, "", new { @class = "text-danger" })
        </div>

        <script>
            // Initialize CKEditor 5 on the textarea with ID 'editor'
            ClassicEditor
                .create(document.querySelector('#editor'))
                .catch(error => {
                    console.error(error);
                });
        </script>

        <div class="form-group">
            <label for="product-price">დეტალები:</label>
            @Html.TextBoxFor(model => model.Details, new { id = "product-price" })
            @Html.ValidationMessageFor(model => model.Details, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.UploadedPhoto, "აირჩიე სურათები")
            <input type="file" name="UploadedPhoto" />
            @Html.ValidationMessageFor(m => m.UploadedPhoto)
        </div>

        <button type="submit" class="btn btn-primary">დამატება</button>
    }
</main>