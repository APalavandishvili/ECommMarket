@{
    Layout = "_CmsLayout";
}
@model IEnumerable<ECommMarket.App.Models.NewsViewModel>

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/newsList.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Mulish:wght@300;900&display=swap">
    <title>EV Tbilisi</title>
    <link rel="icon" href="/images/logo/BrandLogo.jpg">
</head>
<main class="news-container">
    @if(Model.Count() == 0)
    {
        <h1>სიახლეები არ მოიძებნა</h1>
    }
    else{
        @foreach (NewsViewModel news in Model)
        {
            <div class="news-card">
                <div class="news-content">
                    <h3 class="news-title">@news.Title</h3>
                    <p class="news-description">
                        @news.Article
                    </p>
                    <div class="news-meta">
                        <div class="news-meta-info">
                            <span>@news.Timestamp.ToShortDateString()</span>
                        </div>
                        <div class="buttons">
                            <a asp-controller="News" asp-action="Edit" asp-route-id="@news.Id" class="edit-a"><button class="read-more">რედაქტირება</button></a>
                            <a asp-controller="News" asp-action="Delete" asp-route-id="@news.Id" class="delete-a"><button class="read-more">წაშლა</button></a>
                        </div>
                    </div>
                </div>
                <div class="news-thumbnail">
                    <a><img src="@news.Photo.PhotoUrl" alt="Thumbnail Image"></a>
                </div>
            </div>
        }
    }
</main>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
