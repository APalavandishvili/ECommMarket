@model IEnumerable<ECommMarket.App.Models.ProductViewModel>

<head>
    <m1eta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/productStyle.css">
    @* <link rel="stylesheet" href="/css/home.css"> *@
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Mulish:wght@300;900&display=swap">
    <title>Shop</title>
    <link rel="icon" href="/images/BrandLogo.jpg">
</head>
<div class="products">
    <div class="container">
        <div class="product-items">
            @foreach (ProductViewModel product in Model)
            {
                <!-- single product -->
                <div class="product">
                    <div class="product-content">
                        <div class="product-img">
                            <a asp-area="" asp-controller="Products" asp-action="ProductItem" asp-route-id="@product.Id"><img src="@product.Photos!.First().PhotoUrl" alt="product image"></a>
                        </div>
                        <div class="product-btns">
                            <button type="button" class="btn-cart" onclick="location.href='@Url.Action("AddCartItem", "Cart", new {id = product.Id, isProductList = true})'">
                                კალათაში დამატება
                                <span><i class="fas fa-plus"></i></span>
                            </button>
                        </div>
                    </div>
                    <div class="product-info">
                        <a href="#" class="product-name">@product.ProductName</a>
                        @* <p class="product-price" id="discount">₾ 150.00</p>  *@
                        <p class="product-price" style="text-decoration:none;">₾@product.Price</p>
                    </div>
                </div>
                <!-- end of single product -->
            }
        </div>
    </div>
</div>
