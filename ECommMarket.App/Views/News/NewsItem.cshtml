@model ECommMarket.App.Models.NewsViewModel

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Mulish:wght@300;900&display=swap">
    <link rel="stylesheet" href="/css/newsitem.css">
    <title>Document</title>
</head>
<main class="news-article">
    <article class="news-content">
        <h2>@Model.Title</h2>
        <p class="subheading">@Model.Details</p>
        <p class="author">@Model.Timestamp.ToShortDateString()</p>
        <img src="@Model.Photo.PhotoUrl" class="article-image">
        <div class="news-story">
            @Html.Raw(Model.Article)
        </div>
    </article>
</main>