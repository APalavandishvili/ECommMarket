<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/productList.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Mulish:wght@300;900&display=swap">
    <title>EV Tbilisi</title>
    <link rel="icon" href="/images/logo/BrandLogo.jpg">
</head>
<body>
<header class="header">
    <nav class="navbar navbar-expand-lg fixed-top">
        <div class="container">
            <button class="navbar-toggler"
                    type="button"
                    data-bs-toggle="collapse"
                    data-bs-target="#navmenu">
                <span class="navbar-toggler-icon" style="color: white;"></span>
            </button>
            <div class="collapse navbar-collapse" id="navmenu">
                <ul class="navbar-nav mx-auto">
                    <li class="nav-item dropdown">
                        <a href="admin-page-products.html"
                           class="nav-link dropdown-toggle"
                           id="categoriesDropdown"
                           role="button"
                           data-bs-toggle="dropdown"
                           aria-expanded="false">
                            პროდუქცია
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="categoriesDropdown">
                                <li><a asp-controller="Products" asp-action="AddProducts" class="dropdown-item">პროდუქტის დამატება</a></li>
                                <li><a asp-controller="Products" asp-action="CmsProducts" class="dropdown-item">ყველა პროდუქტი</a></li>
                        </ul>
                    </li>
                    <li class="nav-item dropdown">
                            <a asp-controller="News" asp-action="CmsIndex"
                           class="nav-link dropdown-toggle"
                           id="newsDropdown"
                           role="button"
                           data-bs-toggle="dropdown"
                           aria-expanded="false">
                            სიახლეები
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="newsDropdown">
                                <li><a asp-controller="News" asp-action="AddNews" class="dropdown-item">სიახლის დამატება</a></li>
                                <li><a asp-controller="News" asp-action="CmsIndex" class="dropdown-item">ყველა სიახლე</a></li>
                        </ul>
                    </li>
                    <li class="nav-item">
                            <a asp-controller="Order" asp-action="CmsOrders" class="nav-link">შეკვეთები</a>
                    </li>
                    <li class="nav-item dropdown">
                            <a asp-controller="Categories" asp-action="CmsCategories"
                           class="nav-link dropdown-toggle"
                           id="categoryDropdown"
                           role="button"
                           data-bs-toggle="dropdown"
                           aria-expanded="false">
                            კატეგორიები
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="categoryDropdown">
                            <li><a asp-controller="Category" asp-action="Add" class="dropdown-item">კატეგორიის დამატება</a></li>
                            <li><a asp-controller="Category" asp-action="CmsCategories" class="dropdown-item">ყველა კატეგორია</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</header>
@RenderBody()
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>